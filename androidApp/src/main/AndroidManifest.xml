<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="savemenow.es.protecciontotalresk.android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.emergency.section.login.LoginActivity"
            android:theme="@style/materialDesignbyEMF"
            android:exported="false" />
        <activity
            android:name=".view.emergency.section.signup.SignUpActivity"
            android:theme="@style/materialDesignbyEMF"
            android:exported="false" />
        <activity
            android:name=".view.emergency.section.preview.PreviewActivity"
            android:exported="false" />
        <activity
            android:name=".view.emergency.section.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.emergency.section.main.MainActivity"
            android:theme="@style/materialDesignbyEMF"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>